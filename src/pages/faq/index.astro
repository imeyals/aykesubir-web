---
import Base from "@/layouts/Base.astro";
import CallToAction from "@/partials/CallToAction.astro";
import Faq from "@/partials/Faq.astro";
import PageHeader from "@/partials/PageHeader.astro";
import { getEntry } from "astro:content";

const faq = await getEntry("sections", "faq");
const call_to_action = await getEntry("sections", "call-to-action");
---

<Base
  title={faq.data.title}
  meta_title={faq.data.meta_title}
  description={faq.data.description}
>
  <PageHeader title="FAQ" />
  <Faq />
  <CallToAction call_to_action={call_to_action} className="pt-0" />
</Base>
